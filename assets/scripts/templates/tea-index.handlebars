

<table id="tea-table">
  <tr id="tea-table-row" data-id="{{tea.id}}">
    <th>Name</th>
    <th>Type</th>
    <th>Steep Time</th>
    <th>Description </th>
    <th>Start Steep Timer</th>
  </tr>

{{#each teas as |tea|}}
<div data-id="{{tea.id}}">
  <!-- Are we going to display id? -->
  <div class="handlebars-container col-xs-12">
    <tr>
      <div id="tea-row{{tea.id}}">
    <td class="tea-display-row tea-display-row{{tea.id}}"><p class="name tea-display-group">{{tea.name}}</p></td>
    <td class="tea-display-row tea-display-row{{tea.id}}"><p class="type tea-display-group">{{tea.type}}</p></td>
    <td class="tea-display-row tea-display-row{{tea.id}}"><p class="steepTime tea-display-group">{{tea.steepTime}}</p></td>
    <td class="tea-display-row tea-display-row{{tea.id}}"><p class="description tea-display-group">{{tea.description}}</p></td>
    <td class="tea-display-row tea-display-row{{tea.id}}"><button id="steep-btn" class="btn-steep tea-display-group btn" data-id="{{tea.id}}">Steep</button>
      <button id="options-btn" class="tea-display-group btn glyphicon glyphicon-menu-down" data-id="{{tea.id}}" data-toggle="collapse" data-target="#collapseUpdate{{tea.id}}"></button>
    </td>

</div>

<td colspan="5" class="tea-update-form tea-update-form{{tea.id}}">
       <form class="teas" id="update-tea" data-id="{{tea.id}}">
         <div class="form-group">

           <span>Name</span>
           <input type="text" class="update-cell" required="required" id="tea-name-update" name="tea[name]" value="{{tea.name}}" maxlength="150" placeholder="Name">

           <span>Type</span>
           <select required="required" class="update-cell" name="tea[type]">
             <option disabled selected value>-- Type --</option>
             <option value="Black">Black</option>
             <option value="Green">Green</option>
             <option value="White">White</option>
             <option value="Other">Other</option>
           </select>

           <span>Steep Time</span>
           <select required="required" class="update-cell" name="tea[steepTime]">
             <option disabled selected value>-- Steep Time --</option>
             <option value="30">30 seconds</option>
             <option value="60">1 minute</option>
             <option value="90">1 minute 30 seconds</option>
             <option value="120">2 minutes</option>
             <option value="150">2 minutes 30 seconds</option>
             <option value="180">3 minutes</option>
             <option value="210">3 minutes 30 seconds</option>
             <option value="240">4 minutes</option>
             <option value="270">4 minutes 30 seconds</option>
             <option value="300">5 minutes</option>
           </select>

           <span>Description</span>
           <input type="text" name="tea[description]" required="required" id="tea-description-update" class="update-cell" value="{{tea.description}}" placeholder="taste, color..." maxlength="500">

         </div>
         <span></span>
           <button type="submit" data-id="{{tea.id}}" id="update-tea-btn" class="btn btn-tea-success update-tea-btn update-tea-btn{{tea.id}}">Submit Edit</button>



       </form>
       </td>
       <!-- <div id="clear-div"></div> -->


     <!-- <div class="collapse update-collapse" id="collapseUpdate{{tea.id}}">
      <div class="well">
      </div>
      </div> -->

  </tr>
  <tr>
      <td colspan="5" class="hiddenRow">
        <div class="accordian-body collapse options-row" id="collapseUpdate{{tea.id}}">
        <button id="edit-tea-row" data-id="{{tea.id}}" class="edit-delete-btns btn btn-tea-success btn-xs glyphicon glyphicon-pencil" data-toggle="tooltip" data-placement="bottom" title="Edit"> Edit
        <button type="button" id="delete-tea" data-id="{{tea.id}}" class="edit-delete-btns btn btn-delete btn-xs glyphicon glyphicon-trash"> Delete</button>
      </button>
      <!-- <input type="submit" form="update-tea{{tea.id}}" data-id="{{tea.id}}" id="update-tea-btn" class="btn btn-success update-tea-btn update-tea-btn{{tea.id}}" data-toggle="tooltip" data-placement="bottom" title="Edit"> -->
    </div>
    </td>
  </tr>
  </div>

</div>


{{/each}}
</table>



<table id="tea-table">
  <tr id="tea-table-row" data-id="{{tea.id}}">
    <th>Name</th>
    <th>Type</th>
    <th>Steep Time</th>
    <th>Description </th>
    <th>Edit / Delete</th>
  </tr>

{{#each teas as |tea|}}
<div data-id="{{tea.id}}">
  <!-- Are we going to display id? -->
  <div class="handlebars-container col-xs-12">
    <tr data-toggle="collapse" data-target="#collapseUpdate{{tea.id}}">
      <div id="tea-row{{tea.id}}">
    <td class="tea-display-row tea-display-row{{tea.id}}"><p class="name tea-display-group">{{tea.name}}</p></td>
    <td class="tea-display-row tea-display-row{{tea.id}}"><p class="type tea-display-group">{{tea.type}}</p></td>
    <td class="tea-display-row tea-display-row{{tea.id}}"><p class="steepTime tea-display-group">{{tea.steepTime}}</p></td>
    <td class="tea-display-row tea-display-row{{tea.id}}"><p class="description tea-display-group">{{tea.description}}</p></td>

</div>

       <form class="teas" id="update-tea{{tea.id}}" data-id="{{tea.id}}">
         <div class="form-group">
           <td class="tea-update-form tea-update-form{{tea.id}}">
           <span>Name</span>
           <input type="text" id="tea-name-update" name="tea[name]" maxlength="150" placeholder="Name">
         </td>
         <td class="tea-update-form tea-update-form{{tea.id}}">
           <span>Type</span>
           <select name="tea[type]">
             <option value="Black">Black</option>
             <option value="Green">Green</option>
             <option value="White">White</option>
             <option value="Other">Other</option>
           </select>
         </td>
         <td class="tea-update-form tea-update-form{{tea.id}}">
           <span>Steep Time</span>
           <select name="tea[steepTime]">
             <option value="30">30 seconds</option>
             <option value="60">1 minute</option>
             <option value="90">1 minute 30 seconds</option>
             <option value="120">2 minutes</option>
             <option value="150">2 minutes 30 seconds</option>
             <option value="180">3 minutes</option>
             <option value="210">3 minutes 30 seconds</option>
             <option value="240">4 minutes</option>
           </select>
         </td>
         <td class="tea-update-form tea-update-form{{tea.id}}">
           <span>Description</span>
           <input type="text" name="tea[description]" id="tea-description-update" placeholder="taste, color..." maxlength="500">
         </td>
         </div>

       </form>
       <div id="clear-div"></div>


     <!-- <div class="collapse update-collapse" id="collapseUpdate{{tea.id}}">
      <div class="well">
      </div>
      </div> -->

    <td><button type="button" id="delete-tea" data-id="{{tea.id}}" class="btn btn-danger btn-xs glyphicon glyphicon-trash"> Delete</button></td>
  </tr>
  <tr>
      <td colspan="5" class="hiddenRow"><div class="accordian-body collapse" id="collapseUpdate{{tea.id}}"> <button id="edit-tea-row" data-id="{{tea.id}}" class="btn btn-success glyphicon glyphicon-pencil" data-toggle="tooltip" data-placement="bottom" title="Edit">
      </button>
      <button type="submit" id="update-tea-btn" class="btn btn-success update-tea-btn update-tea-btn{{tea.id}}" data-toggle="tooltip" data-placement="bottom" title="Edit">Confirm Edit</button>
    </div>
    </td>
  </tr>
  </div>

</div>


{{/each}}
</table>
